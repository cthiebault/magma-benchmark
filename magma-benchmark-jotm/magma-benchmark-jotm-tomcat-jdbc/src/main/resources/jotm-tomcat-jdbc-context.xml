<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <import resource="jotm-context.xml"/>
  <import resource="jotm-tomcat-jdbc-hsql-context.xml"/>
  <import resource="jotm-tomcat-jdbc-mysql-context.xml"/>

  <bean id="batchDataSource" class="org.obiba.magma.benchmark.support.TomcatDataSourceFactoryBean">
    <property name="url" value="jdbc:hsqldb:file:build/batch.db;shutdown=true"/>
    <property name="driverClass" value="org.hsqldb.jdbcDriver"/>
    <property name="username" value="sa"/>
    <property name="password" value=""/>
  </bean>

</beans>